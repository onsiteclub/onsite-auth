# ===========================================
# ONSITE AUTH HUB - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# -------------------------------------------
# SUPABASE
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# STRIPE
# -------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
# Use test keys for development (start with sk_test_ and pk_test_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key

# Get this from: https://dashboard.stripe.com/webhooks
# Create a webhook endpoint pointing to: https://auth.onsiteclub.ca/api/webhooks/stripe
# Events to listen: checkout.session.completed, customer.subscription.updated, customer.subscription.deleted, invoice.payment_failed
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -------------------------------------------
# STRIPE PRICE IDS PER APP
# -------------------------------------------
# Each app has its own product/price in Stripe
# Get these from: https://dashboard.stripe.com/products
STRIPE_PRICE_CALCULATOR=price_your-calculator-price-id
STRIPE_PRICE_TIMEKEEPER=price_your-timekeeper-price-id
STRIPE_PRICE_DASHBOARD=price_your-dashboard-price-id

# -------------------------------------------
# APP URLS (for redirects after auth)
# -------------------------------------------
# Update these based on your deployment
NEXT_PUBLIC_AUTH_URL=https://auth.onsiteclub.ca
NEXT_PUBLIC_DASHBOARD_URL=https://app.onsiteclub.ca
NEXT_PUBLIC_CALCULATOR_URL=https://calc.onsiteclub.ca

# Deep link schemes for mobile apps
NEXT_PUBLIC_TIMEKEEPER_SCHEME=onsiteclub://timekeeper
NEXT_PUBLIC_CALCULATOR_SCHEME=onsiteclub://calculator

# -------------------------------------------
# ALLOWED REDIRECT DOMAINS
# -------------------------------------------
# Comma-separated list of allowed redirect domains (for security)
ALLOWED_REDIRECT_DOMAINS=onsiteclub.ca,app.onsiteclub.ca,calc.onsiteclub.ca,localhost:3000,localhost:3001

# -------------------------------------------
# RATE LIMITING (optional, for extra security)
# -------------------------------------------
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
